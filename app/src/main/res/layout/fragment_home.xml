<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearViewMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-black"
                android:paddingTop="100dp"
                android:text="@string/full_name"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/FullNameTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E68369"
                android:ems="10"
                android:hint="@string/type_here"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:textColorHint="@android:color/darker_gray"
                android:textColorLink="#E68369"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/e_mail"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EmailTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E68369"
                android:ems="10"
                android:hint="@string/type_here"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/addres_street_no"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/StreetNameTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E68369"
                android:ems="10"
                android:hint="@string/type_here"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/zip_code"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ZipCodeTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E68369"
                android:ems="10"
                android:hint="@string/type_here"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/id_or_passport_no"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/IDNumberTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E68369"
                android:ems="10"
                android:hint="@string/type_here"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/mobile_number"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/PhoneNumberTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E68369"
                android:ems="10"
                android:hint="@string/type_here"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/nationality"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/NationalityTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E68369"
                android:ems="10"
                android:hint="@string/type_here"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/town"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TownTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E68369"
                android:ems="10"
                android:hint="@string/type_here"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/payment_method"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/CashRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="50dp"
                        android:allowUndo="true"
                        android:backgroundTint="#E68369"
                        android:buttonTint="#E68369"
                        android:duplicateParentState="false"
                        android:paddingTop="5dp"
                        android:text="@string/cash"
                        android:textColorLink="#E68369"
                        android:textCursorDrawable="@null" />

                    <RadioButton
                        android:id="@+id/CardRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:allowUndo="true"
                        android:backgroundTint="#E68369"
                        android:buttonTint="#E68369"
                        android:text="@string/card"
                        android:textColorLink="#E68369"
                        android:textCursorDrawable="@null" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/document_issued"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/receiptButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="20dp"
                        android:paddingLeft="35dp"
                        android:paddingRight="35dp"
                        android:text="@string/receipt" />

                    <Button
                        android:id="@+id/invoiceButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/invoice" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:text="@string/receipt_recipient"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButtonMyself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="50dp"
                        android:backgroundTint="#E68369"
                        android:buttonTint="#E68369"
                        android:text="@string/for_myself" />

                    <RadioButton
                        android:id="@+id/radioButtonSomeoneElse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#E68369"
                        android:buttonTint="#E68369"
                        android:text="@string/for_someone_else" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editTextNameReceipt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:backgroundTint="#E68369"
                        android:ems="10"
                        android:hint="    Type The Name For The Receipt"
                        android:inputType="text"
                        android:paddingLeft="30dp"
                        android:textColorLink="#000000" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_span="2"
                        android:backgroundTint="#E68369"
                        android:buttonTint="#E68369"
                        android:text="@string/agreement"
                        android:textColorLink="#E68369" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/CompleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="25dp"
                        android:enabled="false"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:text="@string/complete" />

                    <Button
                        android:id="@+id/clearFormButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginTop="8dp"
                        android:maxWidth="170dp"
                        android:minWidth="170dp"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:text="@string/clear_form"
                        android:visibility="visible" />


                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000" />


                <ImageView
                    android:id="@+id/qrimageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/versionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="@null"
                    android:clickable="false"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="#878484" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="105dp"
                        android:paddingTop="10dp"
                        android:text="Button"
                        android:visibility="invisible" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>